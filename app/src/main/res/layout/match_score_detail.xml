<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout">

    <TextView
        android:id="@+id/homeTeamScore"
        style="@style/Headline1Desktop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/on_surface_on_surface_lv_2"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2" />

    <TextView
        android:id="@+id/minus"
        style="@style/Headline1Desktop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textColor="?attr/on_surface_on_surface_lv_2"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@+id/homeTeamScore"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/awayTeamScore"
        style="@style/Headline1Desktop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/on_surface_on_surface_lv_2"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@+id/minus"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="5" />


    <TextView
        android:id="@+id/currentMinute"
        style="@style/Micro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/on_surface_on_surface_lv_2"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/minus"
        app:layout_constraintStart_toEndOf="@+id/homeTeamScore"
        app:layout_constraintTop_toBottomOf="@+id/minus"
        tools:text="Full Time" />

</androidx.constraintlayout.widget.ConstraintLayout>
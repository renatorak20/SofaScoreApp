<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout">

    <TextView
        android:id="@+id/homeTeamScore"
        style="@style/Headline1Desktop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textColor="?attr/on_surface_on_surface_lv_2"
        android:textSize="32sp"
        app:layout_constraintEnd_toStartOf="@id/minus"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        tools:text="2" />

    <TextView
        android:id="@+id/minus"
        style="@style/Headline1Desktop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textColor="?attr/on_surface_on_surface_lv_2"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="@id/guideline"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/awayTeamScore"
        style="@style/Headline1Desktop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/on_surface_on_surface_lv_2"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@+id/minus"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="5" />

    <TextView
        android:id="@+id/currentMinute"
        style="@style/Micro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/on_surface_on_surface_lv_2"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeTeamScore"
        tools:text="Kraj utakmice" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="?attr/surface_surface_1"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:foreground="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/leagueIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:textSize="14sp"
        style="@style/Headline3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/leagueIcon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Spain" />

    <ImageView
        android:id="@+id/pointer"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:tint="?attr/on_surface_on_surface_lv_2"
        android:src="@drawable/ic_pointer_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/country"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/league"
        style="@style/Headline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="?attr/on_surface_on_surface_lv_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pointer"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="LaLiga" />

</androidx.constraintlayout.widget.ConstraintLayout>
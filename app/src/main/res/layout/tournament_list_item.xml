<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/surface_surface_1"
    android:id="@+id/layout"
    android:foreground="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/tournamentIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tournamentName"
        style="@style/Headline3"
        android:textColor="?attr/on_surface_on_surface_lv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tournamentIcon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Bundesliga" />


</androidx.constraintlayout.widget.ConstraintLayout>